# start a terminal
bindsym $mod+Return exec --no-startup-id alacritty
# use ranger as filemanager
bindsym $mod+e exec --no-startup-id "alacritty -T ranger -e ranger"
# start wezterm(for ssh)
bindsym $mod+t exec --no-startup-id "wezterm start --always-new-process"
# start neovide
bindsym $mod+Shift+n exec --no-startup-id neovide
# drun
bindsym $mod+w exec --no-startup-id "rofi -show drun -no-default-config -config ~/.config/rofi/config.rasi"
# bluetooth
bindsym $mod+b exec --no-startup-id "rofi-bluetooth -no-default-config -config ~/.config/rofi/config.rasi"
# switching window
bindsym $mod+Tab exec --no-startup-id "rofi -show window -no-default-config -config ~/.config/rofi/config.rasi"
# network
bindsym $mod+n exec --no-startup-id "networkmanager_dmenu -no-default-config -config ~/.config/rofi/config.rasi"
# clipboadr
bindsym $mod+v exec --no-startup-id " rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}' -no-default-config -config ~/.config/rofi/config.rasi"

# show_marks yes

# kill focused window
bindsym $mod+q kill

# move between windows
bindsym $mod+Left    focus left
bindsym $mod+Right   focus right
bindsym $mod+Up      focus up
bindsym $mod+Down    focus down

bindsym $mod+Shift+Left   move left
bindsym $mod+Shift+Right  move right
bindsym $mod+Shift+Up     move up
bindsym $mod+Shift+Down   move down

# split in horizontal orientation
bindsym $mod+slash split h
# split in vertical orientation
bindsym $mod+backslash split v

# toggle fullscreen mode
bindsym $mod+f fullscreen toggle

# change layout
bindsym $mod+s layout stacking
bindsym $mod+d layout tabbed
bindsym $mod+Shift++e layout toggle split

# toggle tiling / float
bindsym $mod+Shift+space floating toggle
#  change focus between tiling / floating
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+Shift+a focus child

# move currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# show the next scratchpad window or hide the focused scratchpad window
bindsym $mod+minus scratchpad show

# move focused floating window to the center of all outputs
bindsym $mod+Shift+h move absolute position center
# move focused floating window the the current position of the cursor
bindsym $mod+Shift+m move position mouse
# set a window to stick to the glass
bindsym $mod+Shift+s sticky toggle

